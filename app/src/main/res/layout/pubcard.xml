<?xml version="1.0" encoding="utf-8"?>
<mjc.com.secretaryhelper.PublisherRecordFragment.PublisherCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#E6E4D5"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    card_view:cardCornerRadius="16dp" xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="#E6E4D5"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp" >

        <TableLayout
            android:id="@+id/table_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#363531"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true">


            <include layout="@layout/pubcard_row_headerfooter"/>

            <include layout="@layout/pubcard_row_standard"
                />

            <include layout="@layout/pubcard_row_standard"
                />

            <include layout="@layout/pubcard_row_standard"
                />

            <include layout="@layout/pubcard_row_standard"
                />

            <include layout="@layout/pubcard_row_standard"
                />

            <include layout="@layout/pubcard_row_standard"
                />

            <include layout="@layout/pubcard_row_standard"
                />

            <include layout="@layout/pubcard_row_standard"
                />

            <include layout="@layout/pubcard_row_standard"
                />

            <include layout="@layout/pubcard_row_standard"
                />

            <include layout="@layout/pubcard_row_standard"
                />

            <include layout="@layout/pubcard_row_standard"
                />

            <include layout="@layout/pubcard_row_standard"/>

        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/publisher_name"
            android:id="@+id/textView3"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/service_year_label"
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/service_year"
            android:id="@+id/textView5"
            android:layout_alignRight="@+id/table_view"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp" />

    </RelativeLayout>

</mjc.com.secretaryhelper.PublisherRecordFragment.PublisherCardView>